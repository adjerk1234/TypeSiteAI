<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs', { title: 'Export Website' }) %>
<style>
  .export-container {
    max-width: 800px;
    margin: 0 auto;
  }
  .website-card {
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .website-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .export-btn {
    transition: all 0.3s ease;
  }
  .export-btn:hover {
    transform: scale(1.05);
  }
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  .pulse {
    animation: pulse 2s infinite;
  }
</style>
<body>
  <%- include('partials/_header.ejs') %>
  <div class="container mt-4 export-container">
    <h1 class="text-center mb-4">Export Your Website</h1>
    <div class="row">
      <% websites.forEach(website => { %>
        <div class="col-md-6 mb-4">
          <div class="card website-card">
            <div class="card-body">
              <h5 class="card-title"><%= website.name %></h5>
              <p class="card-text"><%= website.context %></p>
              <form action="/export/<%= website._id %>" method="POST">
                <button type="submit" class="btn btn-primary export-btn pulse">Export</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <%- include('partials/_footer.ejs') %>
</body>
</html>